<?xml version="1.0"?>

<utility xmlns="http://www.github/cliffe/SecGen/utility"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.github/cliffe/SecGen/utility">
  <name>Windows Activation rearm</name>
  <author>Z. Cliffe Schreuders</author>
  <module_license>MIT</module_license>
  <description>Rearms the activation in an isolated network environment.</description>

  <type>activation</type>
  <platform>windows</platform>

  <!-- for now we just make all windows modules conflict with linux bases -->
  <conflict>
    <module_path>bases/.*</module_path>
    <platform>linux</platform>
  </conflict>

</utility>
